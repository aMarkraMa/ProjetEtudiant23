<!--                nom_etudiant = #{nomEtudiant}-->
<!--            </if>-->

<!--            <if test="prenomEtudiant != null and prenomEtudiant != ''">-->
<!--                AND prenom_etudiant = #{prenomEtudiant}-->
<!--            </if>-->

<!--            <if test="idFormation != null">-->
<!--                AND id_formation = #{idFormation}-->
<!--            </if>-->
<!--        </where>-->
    </select>
    <select id="selectById">
    <!--
        #{}
        ${} Injection Sql -> n'utilise pas
    -->
        select *
        from etudiants
        where id_etudiant = #{idEtudiant};
    </select>
    <!--Requêtes conditionnelles dynamiques-->
    <select id="selectByCondition">
        select *
        from etudiants
        <where>
            <if test="idEtudiant != null">
                id_etudiant = #{idEtudiant}
            </if>
            <if test="nomEtudiant != null and nomEtudiant != ''">
                AND nom_etudiant like concat('%',#{nomEtudiant},'%')
            </if>
            <if test="prenomEtudiant != null and prenomEtudiant != '' ">
                AND prenom_etudiant like concat('%',#{prenomEtudiant},'%')
            </if>
            <if test="idFormation != null">
                AND id_formation = #{idFormation}
            </if>
        </where>
    </select>
    <insert id="addEtudiant" useGeneratedKeys="true" keyProperty="idEtudiant">
        insert into etudiants (nom_etudiant, prenom_etudiant, id_formation)
        values (#{nomEtudiant}, #{prenomEtudiant}, #{idFormation});
    </insert>
    <update id="updateEtudiant">
        update etudiants
        <set>
            <if test="nomEtudiant != null and nomEtudiant != ''">
                nom_etudiant = #{nomEtudiant},
            </if>
            <if test="prenomEtudiant != null and prenomEtudiant != ''">
                prenom_etudiant = #{prenomEtudiant},
            </if>
            <if test="idFormation != null">
                id_formation = #{idFormation}
            </if>
        </set>
        where id_etudiant = #{idEtudiant};
    </update>
    <delete id="deleteById">
        delete from etudiants
        where id_etudiant = #{idEtudiant};
    </delete>


</mapper>